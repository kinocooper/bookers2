<h1>Editing Book</h1>


      <%= form_with model:@book,local:true do |f| %>
        <label for="inputTitle">Title</label>
        <%= f.text_field:title %><br>
        <label for="inputBody">Opinion</label>
        <%= f.text_area:body %>

        <%= f.submit "Create Book" %>
      <% end %>

      <%= link_to "Show",book_path(@book.id) %> | <%= link_to "Back",books_path %>