
<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h2>User info</h2>

      <%= image_tag @user.get_profile_image("100x100") %>

      <table>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>

      <% if @user == current_user %>
        <p><%= link_to "[ユーザ情報編集！]",edit_user_path(@user.id) %></p>
      <% else %>
        <p><%= link_to "[ユーザ情報編集！]",user_path(current_user.id) %></p>
      <% end %>



      <h2>New Book</h2>
      <!--空の@bookが対象なので、postでbooksのcreateアクションへ飛ぶ-->
      <%= form_with model:@book,local:true do |f| %>
        <label for="inputTitle">Title</label>
        <%= f.text_field:title %><br>
        <label for="inputBody">Opinion</label>
        <%= f.text_area:body %>

        <%= f.submit "Create Book" %>
      <% end %>

    </div>

    <div class="col-lg-8">
      <h2>Books</h2>
      <table>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= image_tag book.user.get_profile_image("100x100") %>
              <% end %>
            </td>
            <td><%= link_to book.title,book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>

    </div>

  </div>
</div>
